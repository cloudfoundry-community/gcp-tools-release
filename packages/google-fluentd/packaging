set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Copy common utilities
cp -a common/* ${BOSH_INSTALL_TARGET}

# Install Yaml
YAML_VERSION=yaml-0.2.1
YAML_BLOB=ruby/${YAML_VERSION}.tar.gz
tar xzf ${BOSH_COMPILE_TARGET}/${YAML_BLOB}
pushd ${BOSH_COMPILE_TARGET}/${YAML_VERSION}
  ./configure --prefix=${BOSH_INSTALL_TARGET}
  make
  make install
  ldconfig
popd

# Install Ruby
RUBY_VERSION=ruby-2.4.5
RUBY_BLOB=ruby/${RUBY_VERSION}.tar.gz
tar xzf ${BOSH_COMPILE_TARGET}/${RUBY_BLOB}
pushd ${BOSH_COMPILE_TARGET}/${RUBY_VERSION}
  LDFLAGS="-Wl,-rpath -Wl,${BOSH_INSTALL_TARGET}" ./configure --prefix=${BOSH_INSTALL_TARGET} --disable-install-doc --with-opt-dir=${BOSH_INSTALL_TARGET}
  make
  make install
popd

# Install Rubygems
RUBY_GEMS_VERSION=rubygems-3.0.2
RUBY_GEMS_BLOB=ruby/${RUBY_GEMS_VERSION}.tgz
tar xzf ${BOSH_COMPILE_TARGET}/${RUBY_GEMS_BLOB}
pushd ${BOSH_COMPILE_TARGET}/${RUBY_GEMS_VERSION}
  ${BOSH_INSTALL_TARGET}/bin/ruby setup.rb
popd

# Install Bundler
rm -f ${BOSH_INSTALL_TARGET}/bin/bundle
${BOSH_INSTALL_TARGET}/bin/gem install ${BOSH_COMPILE_TARGET}/ruby/bundler-2.0.1.gem --no-document

# Install Bundler cache
GOOGLE_FLUENTD_VENDOR_VERSION=1.3.3-plugin-0.1.0
pushd ${BOSH_COMPILE_TARGET}/google-fluentd-vendor
  tar xzf google-fluentd-vendor-${GOOGLE_FLUENTD_VENDOR_VERSION}.tgz
  mv vendor ${BOSH_INSTALL_TARGET}
popd

# Install Google Fluentd
cp -a ${BOSH_COMPILE_TARGET}/google-fluentd/* ${BOSH_INSTALL_TARGET}/
pushd ${BOSH_INSTALL_TARGET}
  echo "Running bundle"
  ${BOSH_INSTALL_TARGET}/bin/bundle install --local --deployment --binstubs
popd
